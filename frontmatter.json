{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "podcast",
      "previewPath": "'podcast'",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "episode",
          "type": "number",
          "required": true
        },
        {
          "name": "description",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "subtype",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "author",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "image",
          "type": "image",
          "required": true,
          "isPreviewImage": true
        },
        {
          "name": "icon",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "tags",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        },
        {
          "title": "type",
          "name": "type",
          "type": "string"
        },
        {
          "title": "youtubeid",
          "name": "youtubeid",
          "type": "string"
        }
      ]
    },
    {
      "name": "blog",
      "previewPath": "'blog'",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "description",
          "type": "string",
          "single": true
        },
        {
          "name": "author",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "name": "icon",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "tags",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "podcast",
      "path": "[[workspace]]/src/content/podcast/{{year}}",
      "contentTypes": [
        "podcast"
      ]
    },
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "contentTypes": [
        "blog"
      ]
    }
  ],
  "frontMatter.content.publicFolder": "public",
  "frontMatter.git.enabled": true
}
